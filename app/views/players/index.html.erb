
<div class="container">
  <div class="row">
       <!-- insert <div class="card"> -->
    <% @players.each do |player| %>
      <div class="col-xs-12 col-sm-6 col-md-4">

          <div class="card-player">
            <%= player.photo %>
            <div class="card-player-name"><%= link_to player.name, player_path(player), class: "link-color" %></div>
            <p><%= player.position %></p>
            <p><%= player.value_per_match %> â‚¬</p>
            <p><%= player.club.name %></p>
            <% if player.availability == false %>
              <%= "Player is available" %> |
            <% else %>
              <%= "Player is already booked" %> |
            <% end %>
            <%= link_to "Book this player", new_club_booking_path(current_club.id), class: "link-color" %>
          </div>

      </div>
    <% end %>
  </div>
</div>

